{
  "name": "DnD Beyond Inventory Weight",
  "description": "Extension for DnD Beyond to add total weight to the inventory section header",
  "version": "1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["https://www.dndbeyond.com/profile/*/characters/*"],
      "js": [
        "jQuery.js",
        "weight.js"
      ]
    }
  ],
  "background": {
    "scripts" : [
      "jQuery.js",
      "weight.js"
    ]
  },
  "permissions": [
    "activeTab"
  ]
}